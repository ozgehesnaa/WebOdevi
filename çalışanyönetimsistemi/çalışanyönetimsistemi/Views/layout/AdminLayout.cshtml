
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Admin Paneli</title>
    <style>

        body {
            margin: 0;
            font-family: Calibri;
            font-size:16px;
        }

        .sidebar {
            margin: 0;
            padding: 0;
            width: 250px;
            background-color: #04AA6D;
            position: fixed;
            height: 100%;
            overflow: auto;
        }

            .sidebar a {
                display: block;
                color: black;
                padding: 16px;
                text-decoration: none;
            }

                .sidebar a.active {
                    background-color: #04AA6D;
                    color: white;
                }

                .sidebar a:hover:not(.active) {
                    background-color: #555;
                    color: white;
                }

        div.content {
            margin-left: 250px;
            padding: 1px 16px;
            height: 1000px;
        }
        h1 {
            margin-left: 30px;
            color: #fff;
            font-size: 30px;
            text-align: center;
            margin: 40px 0 20px;
        }
        a{
            text-align:center;
            font-size:17px;
            font-weight:500;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h1>Admin Paneli</h1>
        <br /><br /><br /><br />    
        <a href="/site/Index">Siteye Git</a>
        <a href="/adminsite/Index">Çalışan Bilgileri</a>
        <a href="/adminsite/ÇalışanEkle">Çalışan Bilgi Ekle</a>
        <a href="/adminsite/İzinTalepListesi">İzin Talep Listesi</a>
        <a href="/adminsite/AvansTalepListesi">Avans Talep Listesi</a>
        <a href="/adminsite/KullanıcıBilgileri">Kullanıcı Bilgileri</a>
        <a href="/adminsite/GelenMesajlar">Gelen Mesajlar</a>
        <a href="/admingirişi/AdminGiriş">Çıkış</a>
    </div>
    <div class="content">
        @RenderBody()
    </div>


</body>
</html>

