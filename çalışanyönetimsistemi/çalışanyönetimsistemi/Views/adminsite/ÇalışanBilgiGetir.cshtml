@model çalışanyönetimsistemi.Models.Baglantisql.çalışanbilgileri

@{
    ViewBag.Title = "ÇalışanBilgiGetir";
    Layout = "~/Views/layout/AdminLayout.cshtml";
}

<title>Çalışan Ekleme</title>
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap');

    .container {
        width: 100%;
        min-height: 100vh;
    }

        .container .video-container {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        .container video {
            position: relative;
            min-width: 100% !important;
            min-height: 100% !important;
            width: auto;
            height: auto;
        }

        .container .center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 400px;
            background: rgba(255,255,255,.7);
            padding: 20px 40px;
            box-sizing: border-box;
        }

            .container .center h1 {
                font-size: 25px;
                text-align: center;
                margin: 10px 0 20px;
            }

            .container .center input {
                width: 100%;
                border: none;
                outline: none;
                font-size: 20px;
                border: 2px solid #908686;
                margin: 10px 0;
                padding: 10px;
                box-sizing: border-box;
                background: transparent;
                color: #262626;
            }

            .container .center a#login {
                display: block;
                text-decoration: none;
                text-transform: uppercase;
                color: #fff;
                background: #f44336;
                width: 100%;
                text-align: center;
                padding: 10px 0;
                margin: 10px 0 10px;
            }

                .container .center a#login:hover {
                    background: #03a9f4;
                }

            .container .center a {
                color: #262626;
            }

                .container .center a:hover {
                    color: #f44336;
                }

    .button {
        display: block;
        text-decoration: none;
        text-transform: uppercase;
        color: #fff;
        background: #f44336;
        width: 100%;
        text-align: center;
        padding: 10px 0;
        margin: 10px 0 10px;
        height: 50px;
    }

        .button:hover {
            background: #03a9f4;
        }
    .class {
        width: 100%;
        border: none;
        outline: none;
        font-size: 20px;
        border: 2px solid #908686;
        margin: 10px 0;
        padding: 10px;
        box-sizing: border-box;
        background: transparent;
        color: #262626;
    }
</style>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

@using (Html.BeginForm("Guncelle", "adminsite", FormMethod.Post))
{
    <div class="container">
        <div class="video-container">
        </div>
        <div class="center">
            <h1>Çalışan Ekle</h1>
            @Html.TextBoxFor(m => m.çalışanid, new { @class = "class" })
            <br />
            @Html.TextBoxFor(m => m.çalışanad, new { @class = "class" })
            <br />
            @Html.TextBoxFor(m => m.soyad, new { @class = "class" })
            <br />
            @Html.TextBoxFor(m => m.tc, new { @class = "class" })
            <br />
            @Html.TextBoxFor(m => m.işebaşlamatarihi, new { @class = "class" })
            <br />
            @Html.TextBoxFor(m => m.görev, new { @class = "class" })
            <br />
            @Html.TextBoxFor(m => m.maaş, new { @class = "class" })
            <button class="button">Çalışan Güncelle</button>
        </div>

    </div>
}
